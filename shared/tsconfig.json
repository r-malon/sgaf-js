{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "baseUrl": ".",
    "paths": {
      "@sgaf/shared": ["dist"],
      "@sgaf/shared/*": ["dist/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
