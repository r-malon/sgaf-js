{
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "build": "npm run build -w shared && npm run build -w backend && npm run build -w frontend",
    "dev": "npm-run-all -p dev:frontend dev:backend",
    "dev:frontend": "npm run dev -w frontend",
    "dev:backend": "npm run start:dev -w backend",
    "clean": "rimraf frontend/dist frontend/.next backend/dist shared/dist **/*.tsbuildinfo",
    "format": "prettier --write \"frontend/src/**/*.{ts,tsx}\" \"backend/src/**/*.ts\" \"shared/src/**/*.ts\""
  },
  "dependencies": {
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1"
  },
  "devDependencies": {
    "prisma": "^6.15.0"
  }
}
